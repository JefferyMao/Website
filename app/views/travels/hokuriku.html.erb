 <%= link_to "/images/toyama.png", "data-lightbox": "/images/toyama.png" do %>
   <%= image_tag "/images/toyama.png", class: "img", size: "400x500" %>
 <% end %>
 <p>富山</p>
 </div>
 <div class="image-container">
 <%= link_to "/images/shousenkyou.png", "data-lightbox": "/images/shousenkyou.png" do %>
  <%= image_tag "/images/shousenkyou.png", class: "img", size: "400x500" %>
 <% end %>
 <p>山梨県昇仙峡</p>
