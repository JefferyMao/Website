 <div class='comments-container'>
 <h3>Comments</h3>
 <%= link_to "新規投稿ページへ", new_travel_path, style: "color: white; font-size: 20px;"   %>
 <% @hokurikus.each do |t| %>
   <div class="travel">
    <div class='main-box'>
     <%= link_to t.image_url, "data-lightbox": t.image_url do %>
       <%= image_tag t.image_url, class:"img", size: "125x100" if t.image?%>
     <% end %>
      <div class="left-container"><%= t.body %></div>
     <div class="right-container">
     <%= link_to t.user.name, user_path(t.user.id) %>
     <%= t.created_at %>
     <%= link_to "詳細へ", travel_path(t.id) %>
     <%= link_to "編集する", edit_travel_path(t.id) %>
     <%= button_to "削除する", t, method: :delete %>
     </div>
   </div>
   </div>
    <% end %>
 </div>
 